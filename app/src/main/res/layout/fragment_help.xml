<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment.HelpFragment">


    <RelativeLayout
        android:id="@+id/top_layout2"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center|start"
        android:background="@color/orange"
        android:paddingLeft="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:layout_marginLeft="20dp"
            android:textSize="22sp"
            android:textColor="@color/white"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/topLayout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How can we help you?"
        android:layout_marginLeft="20dp"
        android:textSize="22sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/back_image"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/topDetail_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Topics"
                android:textSize="16sp"
                android:textColor="@color/black"
                />

            <RelativeLayout
                android:id="@+id/account_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center|start"
                >

                <ImageView
                    android:id="@+id/account_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/user"
                    android:layout_alignParentLeft="true"
                    app:tint="@color/black" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/account_image"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    />


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_arrow_forward"
                    android:layout_alignParentRight="true"
                    app:tint="@color/black"  />

            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/gray"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:id="@+id/payment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center|start"
                >

                <ImageView
                    android:id="@+id/payment_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_payment"
                    android:layout_alignParentLeft="true"
                    app:tint="@color/black" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payments"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/payment_image"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    />


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_arrow_forward"
                    android:layout_alignParentRight="true"
                    app:tint="@color/gray" />

            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/gray"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:id="@+id/mtSafety_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center|start"
                >

                <ImageView
                    android:id="@+id/mtSafety_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_sheild"
                    android:layout_alignParentLeft="true"
                    app:tint="@color/black" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our Safety"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/mtSafety_image"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    />


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_arrow_forward"
                    android:layout_alignParentRight="true"
                    app:tint="@color/gray" />

            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/gray"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:id="@+id/warrenty_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center|start"
                >

                <ImageView
                    android:id="@+id/warrenty_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/guarantee"
                    android:layout_alignParentLeft="true"
                    app:tint="@color/black" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Warranty"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/warrenty_image"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    />


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_arrow_forward"
                    android:layout_alignParentRight="true"
                    app:tint="@color/gray" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="@color/white"
            >


            <TextView
                android:id="@+id/text_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How are we doing?"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/text_two"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Report a bug or suggest ways to make MTC better"
                android:textSize="14sp"
                android:layout_below="@+id/text_one"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/customer"
                android:layout_alignParentRight="true"
                app:tint="@color/orange" />

            <Button
                android:id="@+id/feedBack_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Give Feedback"
                android:layout_below="@+id/text_two"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>