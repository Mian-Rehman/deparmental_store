<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Islam.CounterActivity">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center|start"
        android:background="@color/orange"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/topCate_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tashbeeh Counter"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/back_image"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/counterTouchLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tasbeh"
        >

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="reset"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="step"
            android:textSize="30sp"
            android:layout_below="@+id/btn_reset"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/step_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="step"
            android:textSize="30sp"
           android:layout_below="@+id/name_text"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            />


        <TextView
            android:id="@+id/counter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            />

        <TextView
            android:id="@+id/counterTotal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Out of 100"
            android:textSize="30sp"
           android:layout_above="@+id/details_text"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/details_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:text="Tap anywhere on the screen to increase the counter"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"

            android:textSize="16sp"
            />


    </RelativeLayout>

</LinearLayout>