<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:backgroundTint="@color/white"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="8dp"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:id="@+id/offer_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:src="@drawable/discount_tag_image"
            />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textColor="@color/black"
            android:paddingLeft="8dp"
            android:textSize="14sp"
            android:singleLine="true"
            android:layout_below="@+id/product_image"
            />

        <TextView
            android:id="@+id/productPrice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textColor="@color/black"
            android:paddingLeft="8dp"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_below="@+id/title_text"
            />
        <TextView
            android:id="@+id/productDiscountPrice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="offer price"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_below="@+id/productPrice_text"
            />

        <TextView
            android:id="@+id/details_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Details"
            android:textColor="#BC5204"
            android:padding="8dp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/productDiscountPrice_text"
            />
    </RelativeLayout>


</androidx.cardview.widget.CardView>