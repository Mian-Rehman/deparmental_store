<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/choosetxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Give feedback"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/feedback_1"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="@color/gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What's the feedback about?"
        android:layout_marginTop="25dp"
        android:textColor="@color/gray"
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/report_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Report an error"
            android:background="@drawable/border_layout"
            android:layout_weight="1"
            android:textColor="@color/gray"
            />

        <TextView
            android:id="@+id/suggestions_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Give Suggestions"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray"
            android:background="@drawable/border_layout"
            android:layout_weight="1"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/feedback_ed"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:hint="Write your feedback in details.."
        android:gravity="start"
        android:textSize="14sp"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_layout"
        />

    <Button
        android:id="@+id/sendFeedback_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Feedback"
        app:cornerRadius="10dp"
        android:padding="10dp"
        android:background="@drawable/button_background"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        />



</LinearLayout>