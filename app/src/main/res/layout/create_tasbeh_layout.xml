<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/dismiss_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_close"
            android:padding="5dp"
            android:background="@drawable/close_image_background"
            app:tint="@color/orange" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bottom_dialog_background"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/emoji"
                android:layout_gravity="center"
                />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_below="@+id/straighteningDetails_text2"
                android:layout_marginTop="30dp"
                android:background="@color/light_gray"/>

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/orange"
                android:inputType="text"
                android:background="@drawable/border_layout"
                android:hint="Enter Tasbeeh Name"
                />

            <EditText
                android:id="@+id/ed_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ccp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:inputType="number"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/orange"
                android:background="@drawable/border_layout"
                android:hint="Enter Tasbeeh Steps"
                />


            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="create"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>